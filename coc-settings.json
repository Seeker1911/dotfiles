{
  "coc.source.emoji.enable": true,
  "coc.preferences.previewAutoClose": true,
  "python.jediEnabled": true,
  "python.venvPath": "~/.pyenv",
  "python.formatting.provider": "autopep8",
  "python.autoComplete.addBrackets": false,
  "python.linting.enabled": true,
  "python.linting.pylintUseMinimalCheckers": true,
  "python.linting.pylintArgs": ["--disable-msg","C0330"],
  "diagnostic.errorSign": "⤫",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "λ",
  "diagnostic.hintSign": "•",
  "diagnostic.displayByAle": true,
  "diagnostic.locationlist": true,
  "diagnostic.enableSign": true,
  "diagnostic.maxWindowHeight": 25,
  "suggest.enablePreview": true,
  "suggest.snippetIndicator": "►",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "--►",
  "codeLens.enable": true,
  "coc.preferences.jumpCommand": "vsplit",
  "languageserver": {
   "sh": {
        "command": "bash-language-server",
        "filetypes": ["sh"],
        "args": ["start"]
   },
   "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
   }
  }
}
