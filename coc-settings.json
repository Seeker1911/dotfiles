{
  "coc.source.emoji.enable": true,
  "coc.preferences.previewAutoClose": true,
  "coc.source.tag.enable":true,
  "coc.preferences.jumpCommand": "drop",
  "coc.preferences.hoverTarget": "echo",
  "suggest.echodocSupport": true,
  "suggest.floatEnable": true,
  "python.jediEnabled": true,
  "python.venvPath": "~/.pyenv",
  "python.formatting.provider": "autopep8",
  "python.autoComplete.addBrackets": true,
  "python.linting.enabled": true,
  "diagnostic.errorSign": "⤫",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "λ",
  "diagnostic.hintSign": "•",
  "diagnostic.displayByAle": false,
  "diagnostic.locationlist": true,
  "diagnostic.enableSign": true,
  "diagnostic.maxWindowHeight": 25,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "--►",
  "suggest.triggerAfterInsertEnter": true,
  "suggest.enablePreview": true,
  "suggest.snippetIndicator": "►",
  "codeLens.enable": true,
  "git.changedSign.hlGroup": "DiffChange",
  "git.enableGutters": false,
  "go.enable":true,
  "go.trace.server":"messages",
  "languageserver": {
   "sh": {
        "command": "bash-language-server",
        "filetypes": ["sh"],
        "args": ["start"]
   },
