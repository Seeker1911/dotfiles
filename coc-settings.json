{
  "coc.source.emoji.enable": true,
  "pyls.plugins.pydocstyle.enabled": true,
  "pyls.plugins.pyflakes.enabled": true,
  "pyls.plugins.pycodestyle.enabled": true,
  "pyls.plugins.jedi_hover.enabled": true,
  "pyls.plugins.jedi_symbols.enabled": true,
  "pyls.plugins.jedi_completion.enabled": true,
  "pyls.configurationSources": ["pycodestyle", "pyflakes"],
  "pyls.plugins.pydocstyle.ignore": ["D102", "D103", "D203", "D213", "D100", "D101", "D401", "D403"],
  "pyls.plugins.pycodestyle.ignore": ["E111", "E121", "E501"],
  "python.linting.pylintEnabled": true,
  "python.jediEnabled": true,
  "python.linting.pylintPath": "pylint",
  "diagnostic.errorSign": "⤫",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "λ",
  "diagnostic.hintSign": "•",
  "languageserver": {
   "sh": {
        "command": "bash-language-server",
        "filetypes": ["sh"],
        "args": ["start"]
   }
 }
}
