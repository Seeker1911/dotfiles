{
  "coc.source.emoji.enable": true,
  "coc.preferences.previewAutoClose": true,
  "pyls.plugins.jedi_definition.follow_builtin_imports": true,
  "python.linting.enabled": true,
  "pyls.plugins.pydocstyle.enabled": true,
  "python.linting.pylintUseMinimalCheckers": true,
  "pyls.plugins.pyflakes.enabled": true,
  "pyls.plugins.pycodestyle.enabled": true,
  "pyls.plugins.jedi_hover.enabled": true,
  "pyls.plugins.jedi_symbols.enabled": true,
  "pyls.plugins.jedi_completion.enabled": true,
  "pyls.configurationSources": ["pycodestyle", "pyflakes"],
  "python.linting.pylintArgs": ["--disable-msg","C0330"],
  "pyls.plugins.pydocstyle.ignore": ["D102", "D103", "D203", "D213", "D100", "D101", "D401", "D403"],
  "pyls.plugins.pycodestyle.ignore": ["E111","E126", "E114","E121", "E122","E127", "E501"],
  "diagnostic.errorSign": "⤫",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "λ",
  "diagnostic.hintSign": "•",
  "diagnostic.displayByAle": false,
  "diagnostic.locationlist": true,
  "diagnostic.enableSign": true,
  "diagnostic.maxWindowHeight": 12,
  "suggest.enablePreview": true,
  "languageserver": {
   "sh": {
        "command": "bash-language-server",
        "filetypes": ["sh"],
        "args": ["start"]
   },
   "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
   }
  }
}
