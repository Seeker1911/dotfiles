"for all ideavimrc commands...
"https://github.com/JetBrains/ideavim/blob/master/src/com/maddyhome/idea/vim/package-info.java
source ~/.vimrc

inoremap jj <ESC>
nnoremap ,a :action GotoAction<CR>
vnoremap ,a :action GotoAction<CR>
nnoremap ,F :action SearchEverywhere<CR>
nnoremap ,f :action FindInPath<CR>
nnoremap ,t :action FileStructurePopup<CR>
nnoremap ]d :action GotoNextError<CR>
nnoremap [d :action GotoPreviousError<CR>

nnoremap gD :action GotoDeclaration<CR>
nnoremap gd :action GotoDefinition<CR>
nnoremap gs :action GotoSuperMethod<CR>
nnoremap gi :action GotoImplementation<CR>
nnoremap gb :action JumpToLastChange<CR>

nnoremap gr :action FindUsages<CR>

nnoremap ,r :action ReformatCode<CR>
vnoremap ,r :action ReformatCode<CR>

nnoremap gcc :action CommentByLineComment<CR>
vnoremap gcc :action CommentByLineComment<CR>

nnoremap <C-CR> :action ShowIntentionActions<CR>
